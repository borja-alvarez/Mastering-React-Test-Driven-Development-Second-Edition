{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist",
        "jsx": "react-jsx", // For React 17.x and React 18.x
        "module": "ESNext", // Choose a module system (ES6 or ESNext)
        "target": "ES5", // Target ECMAScript version
        "strict": true, // Enables strict type-checking options
        "esModuleInterop": true, // Enables compatibility between ES modules and CommonJS modules
        "skipLibCheck": true, // Skip type-checking of all declaration files
        "moduleResolution": "node" // Helps with resolving module paths
    },
    "include": [
        "."
    ],
    "exclude": [
        "node_modules"
    ]
}